<screen xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/xml-screen-2.0.xsd"
        require-authentication="true">

	 <pre-actions>
        <set field="html_title" value="增加团队  "/>
    </pre-actions>
    <actions>
        
    </actions>
    <widgets>
        <render-mode><text type="html" ><![CDATA[
      
				<form role="form">
				  <div class="form-group">
				    <label for="teamName">团队名称</label>
				    <input type="text" class="form-control" id="teamName" placeholder="请输入团队名称">
				  </div>
				  
				  <div class="form-group">
				    <label for="teamDesc">团队简介</label>
				    <textarea rows="6" class="form-control" id="teamDesc" placeholder="请输入团队简介"></textarea>
				     <p class="help-block">主要内容包括该团队为哪些人或机构解决了什么问题，字数不得超过50个字。</p>
				  </div>
				  
				  <div class="form-group">
				    <label for="contactDesc">联系方式</label>
				    <textarea rows="3" class="form-control" id="contactDesc" placeholder="请输入联系方式"></textarea>
				     <p class="help-block">可以是电话号码、官网、邮箱、实体所在地址等。</p>
				  </div>
				  
				  <button type="submit" class="btn btn-primary" style="width:40%; display: block;  margin-left: auto; margin-right: auto;">新增</button>
				</form> 
				
           ]]></text></render-mode>
    </widgets>
</screen>
